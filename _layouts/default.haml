      })();

    %title 
      =@title

  %body
    .container
      .row
        #card.well.affix.span3
                  
          #bio
            %h3.pagination-centered Szu Han Chang

            #avatar
              %img.img-polaroid(src="/images/han.jpg")

            %hr

          #menu
            %ul.nav.nav-pills.nav-stacked
              %li.nav-header Navigation Menu
              %li{:class => @resume}
                %a(href='/') 
                  %i.icon-tasks 
                  Resume
              %li{:class => @projects}
                %a(href='/projects') 
                  %i.icon-beaker 
                  Projects
              %li{:class => @blog}
                %a(href='/blog')
                  %i.icon-pencil
                  Blog
              %li{:class => @coursework}
                %a(href='/coursework') 
                  %i.icon-book 
                  Coursework
            %hr

          #contact
            %ul.unstyled
              %li 
                %i.icon-home 
                Shanghai, China
              %li
                %i.icon-phone
                +1 (904) 748-9119
              %li
                %i.icon-globe 
                %a(href='http://www.szuhanchang.com') www.szuhanchang.com
              %li
                %i.icon-inbox
                %a(href='mailto:szu.han.chang@gmail.com') szu.han.chang@gmail.com
              %li
                %i.icon-linkedin
                %a(href='http://www.linkedin.com/in/szuhanchang') linkedin.com/in/szuhanchang
              %li
                %i.icon-twitter
                %a(href='http://www.twitter.com/hanchang') @hanchang
              %li
                %i.icon-github
                %a(href='http://www.github.com/hanchang') github.com/hanchang
              %li
                %i.icon-laptop
                %a(href='http://www.speakerdeck.com/hanchang') speakerdeck.com/hanchang


      .row
        .span3
          %br

        .span9
          .content
            {{ content }}
            %footer.footer
              &copy; 
              = Time.now.year 
              Szu Han Chang

